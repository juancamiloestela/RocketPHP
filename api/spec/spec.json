{
	"name": "Super Cool API",
	"baseUrl": "http://app.com/api",
	"version": "v1.0",
	"contexts": {
		"public": [],
		"logged": ["Secure::check"],
		"owns": ["Secure::check", "Contexts::is_owner", "Contexts::is_admin"]
	},
	"traitsssss": {
		"paginated": {
			"description": "description of trait"
		},
		"secure": {
			"description": "description of trait"
		}
	},
	"traits": ["ResponseTime"],
	"resources": {
		"User": {
			"description": "User entity",
			"properties": {
				"name": {
					"type": "string",
					"max_length": 30,
					"min_length": 3
				},
				"email": {
					"type": "email",
					"max_length": 30,
					"min_length": 5,
					"unique": true
				},
				"password": {
					"type": "string",
					"max_length": 60,
					"min_length": 60
				},
				"blog": {
					"type": {
						"relation": "has-one",
						"resource": "Blogs",
						"on": "owner"
					}
				}
			},
			"endpoints":{
				"/users": {
					"public": {
						"GET": {
							"traits": ["paginated"],
							"returns": [{"id":"", "name":"", "email":""}]
						}
					}
				},
				"/users/{id}": {
					"public": {
						"GET": {
							"returns": {"id":"", "name":""}
						}
					}
				}
			}
		},
		"Blogs": {
			"description": "Blog entity",
			"traits": ["TimeTracked"],
			"properties": {
				"name": {
					"type": "string",
					"max_length": 30,
					"min_length": 3
				},
				"description": {
					"type": "string",
					"max_length": 400
				},
				"posts": {
					"type": {
						"relation": "has-many",
						"resource": "Posts",
						"on": "blog"
					}
				},
				"owner": {
					"type": {
						"relation": "has-one",
						"resource": "User",
						"on": "blog"
					}
				}
			},
			"endpoints":{
				"/blogs": {
					"public": {
						"GET": {
							"exposed": true,
							"traits": ["paginated"],
							"returns": [{}]
						},
						"POST": {
							"returns": {}
						}
					}
				},
				"/blogs/{id}": {
					"public": {
						"GET": {
							"returns": {}
						},
						"PUT": {
							"returns": {}
						}
					}
				},
				"/blogs/{id}/posts": {
					"public": {
						"GET": {
							"returns": "posts"
						}
					}
				},
				"/blogs/{id}/owner": {
					"public": {
						"GET": {
							"returns": "owner"
						}
					}
				}
			}
		},
		"Posts": {
			"description": "Post entity",
			"traits": ["TimeTracked"],
			"properties": {
				"title": {
					"type": "string",
					"max_length": 30,
					"min_length": 3
				},
				"body": {
					"type": "string",
					"max_length": 1000
				},
				"blog": {
					"type": {
						"relation": "has-one",
						"resource": "Blogs",
						"on": "posts"
					}
				},
				"tags": {
					"type": {
						"relation": "has-many",
						"resource": "Tags",
						"on": "posts"
					}
				}
			},
			"endpoints":{
				"/posts": {
					"public": {
						"GET": {
							"traits": ["paginated"],
							"returns": [{}]
						},
						"POST": {
							"returns": {}
						}
					}
				},
				"/posts/{id}": {
					"public": {
						"GET": {
							"traits": [],
							"returns": {}
						},
						"PUT": {
							"returns": {}
						}
					}
				},
				"/posts/{id}/blog": {
					"public": {
						"GET": {
							"returns": {}
						}
					}
				},
				"/posts/{id}/tags": {
					"public": {
						"GET": {
							"returns": "tags"
						}
					}
				},
				"/posts/tagged/{tag}": {
					"public": {
						"GET": {
							"on_query": "Tags.on_query",
							"returns": {}
						}
					}
				}
			}
		},
		"Tags": {
			"description": "Tag entity",
			"properties": {
				"text": {
					"type": "string",
					"max_length": 30,
					"min_length": 3
				},
				"posts": {
					"type": {
						"relation": "has-many",
						"resource": "Posts",
						"on": "tags"
					}
				}
			},
			"endpoints":{
				"/tags": {
					"public": {
						"GET": {
							"traits": ["paginated"],
							"returns": [{}]
						}
					}
				},
				"/tags/{id}": {
					"public": {
						"GET": {
							"returns": {}
						}
					}
				},
				"/tags/{id}/posts": {
					"public": {
						"GET": {
							"returns": "posts"
						}
					}
				},
				"/tagged/{tag}": {
					"public": {
						"GET": {
							"on_query": "Tags.on_query",
							"returns": {}
						}
					}
				},
				"/tagged/{tag}/posts": {
					"public": {
						"GET": {
							"on_query": "Tags.on_query",
							"returns": "posts"
						}
					}
				}
			}
		}


	}
}