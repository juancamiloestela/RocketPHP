{
	"name": "Super Cool API",
	"baseUrl": "http://app.com/api",
	"version": "v1.0",
	"contexts": {
		"public": [],
		"logged": ["User.is_logged"],
		"owns": ["User.is_logged", "Contexts.is_owner", "Contexts.is_admin"]
	},
	"traitsssss": {
		"paginated": {
			"description": "description of trait"
		},
		"secure": {
			"description": "description of trait"
		}
	},
	"traits": ["ResponseTime"],
	"resources": {
		"User": {
			"description": "User entity",
			"traits": ["\\Rocket\\User\\System"],
			"properties": {
				"name": {
					"type": "string",
					"max_length": 30,
					"min_length": 3
				},
				"blog": {
					"type": {
						"relation": "has-one",
						"resource": "Blog",
						"on": "owner"
					}
				}
			},
			"endpoints":{
				"/register": {
					"public": {
						"POST": {
							"expects": ["name", "email", "password"],
							"on_action": "User.register_action",
							"returns": {}
						}
					}
				},
				"/login": {
					"public": {
						"GET": {
							"expects": ["email", "password"],
							"on_action": "User.login_action",
							"returns": {}
						}
					}
				},
				"/verify": {
					"public": {
						"GET": {
							"expects": ["email", "code"],
							"on_action": "User.verify_action",
							"returns": {}
						}
					}
				},
				"/renew-verification": {
					"public": {
						"GET": {
							"expects": ["email"],
							"on_action": "User.renewVerification_action",
							"returns": {}
						}
					}
				},
				"/logout": {
					"public": {
						"GET": {
							"on_action": "User.logout_action",
							"returns": {}
						}
					}
				},
				"/me": {
					"public": {
						"GET": {
							"on_action": "User.me_action",
							"returns": {}
						}
					}
				},
				"/change-password": {
					"public": {
						"GET": {
							"expects": ["oldPassword", "password"],
							"on_action": "User.changePassword_action",
							"returns": {}
						}
					}
				},
				"/reset-password": {
					"public": {
						"GET": {
							"expects": ["oldPassword", "password"],
							"on_action": "User.changePassword_action",
							"returns": {}
						},
						"POST": {
							"expects": ["oldPassword", "password"],
							"on_action": "User.changePassword_action",
							"returns": {}
						}
					}
				},
				"/users": {
					"public": {
						"GET": {
							"traits": ["paginated"],
							"returns": [{}]
						}
					}
				},
				"/users/{id}": {
					"public": {
						"GET": {
							"returns": {}
						}
					}
				}
			}
		},
		"Blog": {
			"description": "Blog entity",
			"traits": ["TimeTracked"],
			"properties": {
				"name": {
					"type": "string",
					"max_length": 30,
					"min_length": 3
				},
				"description": {
					"type": "string",
					"max_length": 400
				},
				"posts": {
					"type": {
						"relation": "has-many",
						"resource": "Post",
						"on": "blog"
					}
				},
				"owner": {
					"type": {
						"relation": "has-one",
						"resource": "User",
						"on": "blog"
					}
				}
			},
			"endpoints":{
				"/blogs": {
					"public": {
						"GET": {
							"exposed": true,
							"traits": ["paginated"],
							"returns": [{}]
						},
						"POST": {
							"returns": {}
						}
					}
				},
				"/blogs/{id}": {
					"public": {
						"GET": {
							"returns": {}
						},
						"PUT": {
							"returns": {}
						},
						"DELETE": {
							"returns": {}
						}
					}
				},
				"/blogs/{id}/posts": {
					"public": {
						"GET": {
							"returns": "posts"
						}
					}
				},
				"/blogs/{id}/owner": {
					"public": {
						"GET": {
							"returns": "owner"
						}
					}
				}
			}
		},
		"Post": {
			"description": "Post entity",
			"traits": ["TimeTracked"],
			"properties": {
				"title": {
					"type": "string",
					"max_length": 30,
					"min_length": 3
				},
				"body": {
					"type": "string",
					"max_length": 1000
				},
				"blog": {
					"type": {
						"relation": "has-one",
						"resource": "Blog",
						"on": "posts"
					}
				},
				"tags": {
					"type": {
						"relation": "has-many",
						"resource": "Tag",
						"on": "posts"
					}
				}
			},
			"endpoints":{
				"/posts": {
					"public": {
						"GET": {
							"traits": ["paginated"],
							"returns": [{}]
						},
						"POST": {
							"returns": {}
						}
					}
				},
				"/posts/{id}": {
					"public": {
						"GET": {
							"traits": [],
							"returns": {}
						},
						"PUT": {
							"returns": {}
						}
					}
				},
				"/posts/{id}/blog": {
					"public": {
						"GET": {
							"returns": {}
						}
					}
				},
				"/posts/{id}/tags": {
					"public": {
						"GET": {
							"returns": "tags"
						}
					}
				},
				"/posts/tagged/{tag}": {
					"public": {
						"GET": {
							"on_query": "Tags.on_query",
							"returns": {}
						}
					}
				}
			}
		},
		"Tag": {
			"description": "Tag entity",
			"properties": {
				"text": {
					"type": "string",
					"max_length": 30,
					"min_length": 3
				},
				"posts": {
					"type": {
						"relation": "has-many",
						"resource": "Post",
						"on": "tags"
					}
				}
			},
			"endpoints":{
				"/tags": {
					"public": {
						"GET": {
							"traits": ["paginated"],
							"returns": [{}]
						}
					}
				},
				"/tags/{id}": {
					"public": {
						"GET": {
							"returns": {}
						}
					}
				},
				"/tags/{id}/posts": {
					"public": {
						"GET": {
							"returns": "posts"
						}
					}
				},
				"/tagged/{tag}": {
					"public": {
						"GET": {
							"on_query": "Tags.on_query",
							"returns": {}
						}
					}
				},
				"/tagged/{tag}/posts": {
					"public": {
						"GET": {
							"on_query": "Tags.on_query",
							"returns": "posts"
						}
					}
				}
			}
		}


	}
}